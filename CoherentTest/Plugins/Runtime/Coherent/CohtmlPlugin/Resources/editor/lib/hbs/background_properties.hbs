                <option value="inherit">inherit</option>
                <option value="cover">cover</option>
                <option value="contain">contain</option>
            {{/select}}
        </select>
    </div>

    <div class="input-backgroundSize wrap-property clearfix">
        <label class="inner-label">Width</label>
        <select name="" class="units-string" data-property-set="units" data-property-key="backgroundSizeWidth">
            {{#select_units widget.styles.backgroundSizeWidth}}
                <option value="vw">vw</option>
                <option value="vh">vh</option>
                <option value="vmax">vmax</option>
                <option value="vmin">vmin</option>
                <option value="px">px</option>
                <option value="pt">pt</option>
                <option value="rem">rem</option>
                <option value="%">%</option>
            {{/select_units}}
        </select>

        <input property type="number" step="{{#format_value widget.styles.backgroundSizeWidth}}{{/format_value}}"
               value="{{#number_only widget.styles.backgroundSizeWidth}}{{/number_only}}" class="units-number"
               data-property-set="styles" data-property-key="backgroundSizeWidth"/>
    </div>

    <div class="input-backgroundSize wrap-property clearfix">
        <label class="inner-label">Height</label>
        <select name="" class="units-string" data-property-set="units" data-property-key="backgroundSizeHeight">
