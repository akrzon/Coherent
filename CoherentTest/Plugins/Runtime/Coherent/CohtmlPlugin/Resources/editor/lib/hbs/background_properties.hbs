{{#ifvalue widget.type value='responsiveImage'}}

    <div class="wrap-property clearfix">
        <label style="width: 150px;">Image url</label>
        <button id="upload-image" class="k-button">browse</button>
    </div>

    <div class="wrap-property clearfix">
        <label>BgPositionX
            <span type="button" class="add-keyframe" data-property-set="styles"
                  data-property-key="backgroundPositionX"></span>
        </label>

        <select name="" class="units-string" data-property-set="units" data-property-key="backgroundPositionX">
            {{#select_units widget.styles.backgroundPositionX}}
                <option value="vw">vw</option>
                <option value="vh">vh</option>
                <option value="vmax">vmax</option>
                <option value="vmin">vmin</option>
                <option value="px">px</option>
                <option value="pt">pt</option>
                <option value="rem">rem</option>
                <option value="left">left</option>
                <option value="center">center</option>
                <option value="right">right</option>
            {{/select_units}}
        </select>
        <input property type="number" step="{{#format_value widget.styles.backgroundPositionX}}{{/format_value}}"
               value="{{#number_only widget.styles.backgroundPositionX}}{{/number_only}}" class="units-number"
               data-property-set="styles" data-property-key="backgroundPositionX"/>
    </div>


    <div class="wrap-property clearfix">
        <label>BgPositionY
