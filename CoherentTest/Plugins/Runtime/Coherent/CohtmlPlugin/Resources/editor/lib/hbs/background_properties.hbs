               data-property-set="styles" data-property-key="backgroundSizeHeight"/>
    </div>

    <div class="wrap-property clearfix">
        <label>BgRepeat</label>
        <select data-property-set="styles" data-property-key="backgroundRepeat">
            {{#select widget.styles.backgroundRepeat}}
                <option value="no-repeat">no-repeat</option>
                <option value="repeat">repeat</option>
                <option value="no-repeat repeat">no-repeat repeat</option>
                <option value="repeat no-repeat">repeat no-repeat</option>
            {{/select}}
        </select>
    </div>

{{/ifvalue}}

{{#if widget.styles.webkitMaskImage}}
    <div class="clearfix">
        <label>Mask-image</label>
        <button id="upload-mask-image" class="k-button">browse</button>
    </div>
    {{#ifvalues widget.styles.webkitMaskImage
                value='{"showHide":"true", "notEqual": "true","items": [" ", "initial"]}'}}
        <div class="clearfix">
            <div class="mask-image-remove-area text-right">
                <span class="url-text">{{#format_name_background_url
                    widget.styles.webkitMaskImage}}{{/format_name_background_url}}&nbsp;&nbsp;</span>
                &nbsp;&nbsp;&nbsp;&nbsp;<span id="remove-mask-image" class="fa fa-times-circle remove-property"></span>&nbsp;&nbsp;
            </div>
        </div>
    {{/ifvalues}}
{{/if}}

