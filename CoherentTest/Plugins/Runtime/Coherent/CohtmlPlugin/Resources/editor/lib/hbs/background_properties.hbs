{{#if widget.background}}
    <div class="wrap-property clearfix">
        <label>Background
            <div type="button" class="add-keyframe" data-property-set="backgroundColor"
                 data-property-key="backgroundColor"></div>
        </label>
        <input class="color-picker" id="background-picker"/>
    </div>
{{/if}}

{{#ifvalue widget.type value='button'}}
    {{#if widget.url}}
        <div class="wrap-property clearfix">
            <label style="width: 150px;">Background-image</label>
            <button id="upload-image" class="k-button">browse</button>
        </div>
    {{/if}}
{{/ifvalue}}

