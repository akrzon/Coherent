<li class="k-state-active files-cont" data-type="styles">
    <div class="wrap-property clearfix">
        <div id="scene-events" class="toolbar toolbar--dropdown-like"></div>
    </div>
</li>

<li class="k-state-active files-cont" data-type="styles">
    <div class="wrap-property clearfix">
        <label>Aspect Ratio</label>

        <select id="scene-aspect-ratio">

            {{#select this.sceneSize.type}}
                <option value="aspectRatio4_3">4:3 (800x600)</option>
                <option value="aspectRatio5_4">5:4 (1000x800)</option>
                <option value="aspectRatio16_10">16:10 (1440x900)</option>
                <option value="aspectRatio16_9">16:9 (1600x900)</option>
                <option value="aspectRatio16_9_full_hd">16:9 (1920x1080)</option>
                <option value="aspectRatio_custom">Custom</option>
            {{/select}}

        </select>
    </div>

    <div id="aspect-ratio-custom"
        {{#ifvalueNot this.sceneSize.type value='aspectRatio_custom'}}
         class="is-hidden"
        {{/ifvalueNot}}
    >

        <div class="wrap-property clearfix">
            <label>Width</label>
            <input id="aspect-ratio-width-custom"
                   type="number"
                   value="{{#number_only this.sceneSize.width }}{{/number_only}}"/>
        </div>

        <div class="wrap-property clearfix">
            <label>Height</label>
            <input id="aspect-ratio-height-custom"
                   type="number"
                   value="{{#number_only this.sceneSize.height }}{{/number_only}}"/>
        </div>

    </div>
</li>

<li class="k-state-active files-cont" data-type="styles">
    <div class="wrap-property clearfix">
        <label>Background
            <div type="button" data-property-set="backgroundColor" data-property-key="backgroundColor"></div>
        </label>
        <input id="scene-background-picker" class="color-picker"/>
    </div>
</li>
